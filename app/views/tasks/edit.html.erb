<% provide(:title, 'Edit Task') %>
<div class="container">
  <h1>タスク編集</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= render 'shared/task_error_messages' %>
      <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
        <%= f.label :task_name, class: "label-form" %>
        <%= f.text_field :task_name, class: "form-control" %>
  
        <%= f.label :task_description, class: "label-form" %>
        <%= f.text_area :task_description, class: "form-control", rows: 5 %>
        
        <%= f.submit "更新", class: "btn btn-primary btn-form" %>
        <%= link_to "キャンセル", "#", class: "btn btn-default btn-form" %>
      <% end %>
    </div>
  </div>
</div>